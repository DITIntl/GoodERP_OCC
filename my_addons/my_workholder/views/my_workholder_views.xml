<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--夹具列表视图-->
    <record id="equipment_workholder_tree_view" model="ir.ui.view">
        <field name="name">equipment.workholder.tree</field>
        <field name="model">equipment.workholder</field>
        <field name="arch" type="xml">
            <tree string="Product">
                <field name="default_code"/>
                <field name="name"/>
                <field name="drawing_number"/>
                <field name="location"/>
                <field name="producer"/>
                <field name="durability"/>
                <field name="location"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!--夹具产品窗体-->
    <record id="equipment_workholder_form_view" model="ir.ui.view">
        <field name="name">equipment.workholder.tree</field>
        <field name="model">equipment.workholder</field>
        <field name="arch" type="xml">
            <form string="夹具">
                <sheet>
                    <group>
                        <field name="default_code"/>
                        <field name="name"/>
                        <field name="drawing_number"/>
                        <field name="location"/>
                        <field name="producer"/>
                        <field name="durability"/>
                        <field name="location"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="equipment_workholder_search_view" model="ir.ui.view">
        <field name="name">equipment_workholder.search</field>
        <field name="model">equipment.workholder</field>
        <field name="name" string= "产品" filter_domain="['|', '|', '|', ('product_variant_ids.default_code'
               , 'ilike', self),('name', 'ilike', self), ('x_tuhao', 'ilike', self), ('barcode', 'ilike', self)]"/>
        <separator/>
        <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
        <separator/>
        <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
    </record>

    <record id="equipment_workholder_action" model="ir.actions.act_window">
        <field name="name">夹具</field>
        <field name="res_model">equipment.workholder</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="target">current</field>
    </record>

    <menuitem name="工装管理" id="menu_equipment"/>
    <menuitem id="menu_equipment_workholder" name="夹具" action="equipment_workholder_action"
        parent="menu_equipment" sequence="1"/>
</odoo>